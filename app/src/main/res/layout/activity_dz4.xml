<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCanvas">

    <by.itacademy.androidclasses.dz4.clock.Dz4BaseOfClockView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <by.itacademy.androidclasses.dz4.clock.Dz4ClockDrawView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <by.itacademy.androidclasses.dz4.diagram.Dz4DiagramView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/animation_owl"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_gravity="end"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="10dp" />
</FrameLayout>