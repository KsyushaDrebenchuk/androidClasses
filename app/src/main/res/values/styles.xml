<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BasisSizeFlag">
        <item name="android:layout_width">270dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="LoginEditText">
        <item name="android:background">@color/loginEditTextBg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">380sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:fontFamily">@font/monda_regular</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">380sp</item>
        <item name="android:layout_height">60sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/monda_bold</item>
    </style>
</resources>