<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="by.itacademy.androidclasses">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="by.itacademy.androidclasses.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="by.itacademy.androidclasses.dz1.Dz1Activity"
            android:parentActivityName="by.itacademy.androidclasses.MainActivity" />

        <activity
            android:name="by.itacademy.androidclasses.dz2.Dz2Activity"
            android:parentActivityName="by.itacademy.androidclasses.MainActivity" />

        <activity
            android:name="by.itacademy.androidclasses.dz3.Dz3SwitchingScreenActivity"
            android:parentActivityName="by.itacademy.androidclasses.MainActivity" />
      
        <activity
            android:name="by.itacademy.androidclasses.dz3.Dz3OpenImageActivity"
            android:parentActivityName="by.itacademy.androidclasses.dz3.Dz3SwitchingScreenActivity" />

        <activity
            android:name="by.itacademy.androidclasses.dz3.Dz3ScreenDesign"
            android:parentActivityName="by.itacademy.androidclasses.dz3.Dz3SwitchingScreenActivity" />
      
      <activity
            android:name="by.itacademy.androidclasses.dz4.Dz4Activity"
            android:parentActivityName="by.itacademy.androidclasses.MainActivity" />
    </application>
</manifest>